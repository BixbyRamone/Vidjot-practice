{{#each ideas}}
	<div class="card card card-body">
		<h4>{{title}}</h4>
		<p>{{details}}</p>
		<a href="/ideas/edit/{{id}}" class="col-sm-3 btn btn-dark btn-block mb-2">Edit</a>
		<form action="/ideas/{{id}}?_method=DELETE" method="post">
		<input type="submit" name="_method" value="Delete" class="col-sm-3 btn btn-danger btn-block">	
		</form>
	</div>
{{else}}
	<p>No video ideas listed</p>
{{/each}}